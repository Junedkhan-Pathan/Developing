<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Add Courses</title>
</head>
<body>
    <form method='post' action="/updates" >
      <% newData.forEach(function(item){ %> 
    <h3 style="text-align: center;" class="mt-5">Update Course </h3>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">New Name of Course</label>
      <input type="text" class="form-control" name = 'newName'required value="<%= item.courseName%>">
    </div>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">Update Duration of Course in Month</label>
      <input type="text" class="form-control" name = 'newDuration' required value="<%= item.courseDuration%>">
    </div>
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">New Price of Course</label>
      <input type="text" class="form-control" name = 'newPrice' required value="<%= item.coursePrice%>">
    </div>
    <%})%>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Update Course</button>
      <!-- <a type="submit" class="btn btn-primary" >Update Course</a> -->
    </div>
  
</form>
    
</body>
</html>
